<h2>Hola {{first_name}} {{last_name}}</h2>
<button onclick="location.href='/users/logout'">Logout</button>
<button>Editar Precios</button>

<h3>Detalles del Perfil</h3>

<p>Email: {{email}}</p>
<p>Edad: {{age}}</p>


{{#if products.length}}
    {{#each products}}
        <div class="card">
            <img src={{thumbnails}} class="card-img" alt="img">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{description}}</p>
            </div>
            <ul class="list">
                <li class="list-item">Price: {{price}}</li>
                <li class="list-item">Stock: {{stock}}</li>
                <li class="list-item">Category: {{this.category}}</li>
            </ul>
            <button style="width: 150px">Agregar al Carrito</button>
        </div>
    {{/each}}

{{else}}
    <h2>No Existen Productos</h2>
{{/if}}


